<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="es.vcarmen.fragmentos.Contenedor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="2">

        <fragment
            android:name="es.vcarmen.fragmentos.Fragmento1"
            android:id="@+id/fragmento1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </fragment>

        <fragment
            android:name="es.vcarmen.fragmentos.Fragmento2"
            android:id="@+id/fragmento2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </fragment>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="2">

        <fragment
            android:name="es.vcarmen.fragmentos.Fragmento3"
            android:id="@+id/fragmento3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </fragment>

        <fragment
            android:name="es.vcarmen.fragmentos.Fragmento4"
            android:id="@+id/fragmento4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </fragment>

    </LinearLayout>



</LinearLayout>
